<!-- 
===========================================
Program: Car Inventory Manager (COSC2100)
File: MainWindow.xaml
Author: Ayomide Emmanuel
Date: October 2025
Description:
    Defines the user interface layout for the Car Inventory application.
    Includes input fields for Make, Model, Year, Price, and a CheckBox to indicate
    whether a car is new or used. Also includes buttons to enter, reset, and exit,
    and a ListView to display the current car inventory.
===========================================
-->



<Window x:Class="Assignment_2_Classes_And_Exceptions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_2_Classes_And_Exceptions"
        mc:Ignorable="d"
        Title="CarInventory" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Input Fields -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition/>
            <!-- List -->
            <RowDefinition Height="Auto"/>
            <!-- Output Label -->
        </Grid.RowDefinitions>

        <!-- ========================= INPUT SECTION ========================= -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <!-- Make -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="_Make:" Width="100" Target="{Binding ElementName=Make}" VerticalAlignment="Center"/>
                <ComboBox x:Name="Make" Width="200" Height="25" ToolTip="Select the car manufacturer">
                    <ComboBoxItem Content="Hyundai"/>
                    <ComboBoxItem Content="Kia"/>
                    <ComboBoxItem Content="Toyota"/>
                    <ComboBoxItem Content="Ford"/>
                    <ComboBoxItem Content="Lexus"/>
                    <ComboBoxItem Content="Honda"/>
                    <ComboBoxItem Content="Chevrolet"/>
                    <ComboBoxItem Content="Mazda"/>
                    <ComboBoxItem Content="Tesla"/>
                    <ComboBoxItem Content="Dodge"/>
                </ComboBox>
            </StackPanel>

            <!-- Model -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="_Model:" Width="100" Target="{Binding ElementName=Model}" VerticalAlignment="Center"/>
                <TextBox x:Name="Model" Width="200" Height="25" ToolTip="Enter the car model"/>
            </StackPanel>

            <!-- Year -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="_Year:" Width="100" Target="{Binding ElementName=Year}" VerticalAlignment="Center"/>
                <ComboBox x:Name="Year" Width="200" Height="25" ToolTip="Select the manufacturing year"/>
            </StackPanel>

            <!-- Price -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="_Price:" Width="100" Target="{Binding ElementName=txtPrice}" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPrice" Width="200" Height="25" ToolTip="Enter the selling price"/>
            </StackPanel>

            <!-- Is New -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="_New?" Width="100" VerticalAlignment="Center"/>
                <CheckBox x:Name="checkIsNew" ToolTip="Check if the car is new"/>
            </StackPanel>
        </StackPanel>

        <!-- ========================= BUTTON SECTION ========================= -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button x:Name="btnEnter" Click="btnEnter_Click" Content="_Enter" Width="100" Margin="10,0" ToolTip="Save or update car details"/>
            <Button x:Name="btnReset" Click="btnReset_Click" Content="_Reset" Width="100" Margin="10,0" ToolTip="Clear input fields"/>
            <Button x:Name="btnExit" Content="E_xit" Click="btnExit_Click" Width="100" Margin="10,0" ToolTip="Exit the application"/>
        </StackPanel>

        <!-- ========================= LISTVIEW SECTION ========================= -->
        <ListView x:Name="lvCars" Grid.Row="2" Margin="0,10,0,10" ToolTip="Displays the list of cars">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="New?" DisplayMemberBinding="{Binding IsNew}" Width="60"/>
                    <GridViewColumn Header="Make" DisplayMemberBinding="{Binding Make}" Width="120"/>
                    <GridViewColumn Header="Model" DisplayMemberBinding="{Binding Model}" Width="120"/>
                    <GridViewColumn Header="Year" DisplayMemberBinding="{Binding Year}" Width="80"/>
                    <GridViewColumn Header="Price ($)" DisplayMemberBinding="{Binding Price}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- ========================= OUTPUT MESSAGE ========================= -->
        <Label x:Name="lblOutput" Grid.Row="3" Content="Status messages appear here."
               HorizontalAlignment="Center" Foreground="Gray" FontStyle="Italic" Margin="0,10"/>

    </Grid>
</Window>
